= simple_form_for @pilot, html: { class: 'form-horizontal' } do |f|
  = hidden_field_tag 'character_basics', 'true'
  - if @pilot.errors.any?
    .alert-box.warning.radius{"data-alert" => ""}
      %p
        = pluralize(@pilot.errors.count, "error")
        prohibited this pilot from being saved:
      %ul
        - @pilot.errors.full_messages.each do |msg|
          %li= msg

  .row
    .medium-6.small-12.columns
      .row
        .small-3.columns
          = f.label :name, :class => 'inline left'
        .small-9.columns
          = f.input :name, :placeholder => 'Faction name', label: false
      .row
        .small-3.columns
          = f.label :skill, :class => 'inline left'
        .small-9.columns
          = f.input :skill, :placeholder => 'Pilot skill', label: false
      .row
        .small-3.columns
          = f.label :description, :class => 'inline left'
        .small-9.columns
          = f.input :description, :placeholder => 'Pilot description', label: false, as: :text, :input_html => { :rows => 10 }
      .row
        .small-3.columns
          = f.label :card_text, :class => 'inline left'
        .small-9.columns
          = f.input :card_text, :placeholder => 'Pilot card text', label: false, as: :text, :input_html => { :rows => 10 }
      .row
        .small-12.columns
          .form-actions
            = f.submit nil, :class => 'button'
            = link_to t('.cancel', :default => t("helpers.links.cancel")), pilots_path, :class => 'button secondary'

    .medium-6.small-12.columns
      = find_and_preserve render :partial => 'layouts/markdown'
