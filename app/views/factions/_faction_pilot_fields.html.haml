.fields
  .row
    .small-3.columns
      = f.label :pilot_id, :class => 'inline right'
    .small-4.columns
      = f.input :pilot_id, :as => :select, :collection => Pilot.where(:true).map{|pilot| ["#{pilot.name}", pilot.id]}, label: false
    .small-1.columns
      = f.hidden_field :_destroy
      = link_to "<i class='fi-trash'></i>".html_safe, '', :onclick => "remove_fields(this);return false;"
