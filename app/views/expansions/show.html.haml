- content_for :title do
  = @expansion.title

.row
  .small-12.columns
    %h1= @expansion.title
    %p
      = @expansion.description

.row
  .small-12.columns
    .button-bar
      %ul.button-group.round
        %li= link_to "<i class='fi-arrow-left'> Back</i>".html_safe, |
            expansions_path, :class => 'tiny secondary button'         |
        - if can? :manage, @expansion
          %li= link_to "<i class='fi-pencil'> Edit</i>".html_safe, edit_expansion_path(@expansion), :class => 'tiny success button'
          %li= link_to "<i class='fi-trash'> Destroy</i>".html_safe, @expansion, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'tiny alert button'
